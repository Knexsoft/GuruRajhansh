@{
    ViewData["Title"] = "Login || GuruRajhansh";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}
<script src="https://cdnjs.cloudflare.com/ajax/libs/angular-messages/1.6.4/angular-messages.min.js"></script>
<style>

    .border-bottom > h2 {
        border-bottom: solid 1px #0094ff;
    }
</style>
<section ng-controller="ctrLogin">
    <div class="row">
        <div class="col-md-6">
            <div class="panel">
                @*<div class="panel-heading">
                        <h2>Registration...</h2>
                    </div>*@
                <div class="panel-body">

                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="row">
                <div class="col-lg-2">&nbsp;</div>
                <div class="col-lg-8">
                    <div class="panel">
                        <div class="panel-heading border-bottom">
                            <h2>Login...</h2>
                        </div>
                        <div class="panel-body">
                            <form ng-submit="Login()" name="UserLogin" novalidate>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label class="bmd-label-floating">Phone Number</label>
                                            <input type="text" class="form-control" name="PhoneNumber" ng-maxlength="10" ng-pattern="/^\+?\d{10}$/" ng-model="Login.PhoneNumber" ng-required="true">
                                            <span style="color:red" ng-show="UserLogin.PhoneNumber.$dirty && UserLogin.PhoneNumber.$invalid">
                                                <span ng-show="UserLogin.PhoneNumber.$error.required">Enter phone number.</span>
                                            </span>
                                            <span style="color:red" ng-show="UserLogin.PhoneNumber.$error.pattern">Please enter a 10 digit number</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label class="bmd-label-floating">Password</label>
                                            <input type="password" class="form-control" name="password" ng-model="Login.Password" required>
                                            <span style="color:red" ng-show="UserLogin.password.$dirty && UserLogin.password.$invalid">
                                                <span ng-show="UserLogin.password.$error.required">Enter password.</span>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-group">
                                            <label style="color:red !important"  ng-show="{{_flag}}">Invalid login Try again</label>
                                        </div>
                                    </div>  
                                </div>
                                <button type="submit" class="btn btn-primary pull-right col-sm-12" ng-disabled="UserLogin.$invalid"><i class="fa fa-unlock"></i>&nbsp;LogIn</button>
                            </form>
                            <div class="clearfix">
                                <span>
                                    If you are not register, Please <a href="@Url.Action("Registration","User")">cleck here.</a>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-2">&nbsp;</div>
            </div>
            
        </div>
    </div>
</section>
