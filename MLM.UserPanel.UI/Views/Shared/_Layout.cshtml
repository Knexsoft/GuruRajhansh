@using MLM.UserPanel.UI.Utilities;
@using System.Security.Claims;
@inject SessionHandler sessionHandler
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />
    <title>@ViewData["Title"] - GuruRajHansh</title>

    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />
    <link href="@Url.Content("~/lib/font-awesome/css/font-awesome.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/css/material-dashboard.css")" rel="stylesheet" />
    <link href="@Url.Content("~/css/style.css")" rel="stylesheet" />
    <style type="text/css">
        .fa {
            margin-right: 8px !important;
            width: unset !important;
            line-height: inherit !important;
            font-size: unset !important;
        }

        .navbar-brand {
            font-size: 25px !important;
        }

        .navbar.navbar-absolute {
            padding-top: 0px !important;
            color: #f1f1f1 !important;
        }

        .navbar {
            padding: 0rem 0 !important;
        }

        .main-panel > .content {
            padding: 1px 15px !important;
        }

        h3 {
            margin: unset !important;
        }

        .bmd-form-group label {
            color: #666 !important;
            font-weight: bold !important;
        }
    </style>
</head>
<body>
    <div class="wrapper" ng-app="GuruRajhanshApp" ng-controller="ctrLayout">
        <div class="sidebar" data-color="purple" data-background-color="white">
            <div class="logo">
                <a href="#" class="simple-text logo-normal">
                    Guru Raj Hansh
                </a>
            </div>
            <div class="sidebar-wrapper">
                <ul class="nav">
                    <li class="nav-item active">
                        <a class="nav-link" href="/Dashboard">
                            <i class="fa fa-dashboard"></i>
                            <p>Dashboard</p>
                        </a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="">
                            <i class="fa fa-dashboard"></i>
                            <p>Single Leg Income</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/FranchiseIncome">
                            <i class="fa fa-money"></i>
                            <p>Franhise Income</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/SingleLegIncome">
                            <i class="fa fa-money"></i>
                            <p>Single Leg Income</p>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="main-panel">
            <nav class="navbar navbar-expand-lg navbar-transparent navbar-absolute fixed-top border-bottom">
                <div class="container-fluid bg-info">
                    <div class="navbar-wrapper">
                        <h1 class="navbar-brand">User Dashboard</h1>
                    </div>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="navbar-toggler-icon icon-bar"></span>
                        <span class="navbar-toggler-icon icon-bar"></span>
                        <span class="navbar-toggler-icon icon-bar"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-end">
                        <ul class="navbar-nav">
                            @if (User.Claims.Where(x => x.Type == ClaimTypes.Authentication).Select(x => x.Value).FirstOrDefault() == "0")
                            {
                                <li class="nav-item">
                                    <a class="nav-link" href="/UserPin/Activate">
                                        <span class="btn btn-danger btn-sm"><i class="fa fa-key"></i><strong>Activate Your Id</strong> </span>
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link" href="javascript:void;">
                                        <i class="fa fa-key"></i><strong>Pin : {{_userpin}}</strong>
                                    </a>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("UserProfile","User")">
                                    <i class="fa fa-user"></i> @User.Identity.Name
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="javascript:void;" ng-click="Logout()">
                                    <i class="fa fa-sign-out"></i> Logout
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <div class="content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>
            <footer class="footer">
                <div class="container-fluid">
                    @*<nav class="float-left">
                            <ul>
                                <li>
                                    <a href="#">
                                        Creative Tim
                                    </a>
                                </li>
                            </ul>
                        </nav>*@
                    <div class="copyright float-right">
                        &copy;
                        <script>
                            document.write(new Date().getFullYear())
                        </script>, All right by Gururajhansh.com
                    </div>
                    <!-- your footer here -->
                </div>
            </footer>
        </div>
    </div>

    <!--   Core JS Files   -->
    <script src="@Url.Content("~/js/core/jquery.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/js/core/popper.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/angularjs/angular.min.js")" type="text/ng-template">
    </script>
    <script src="@Url.Content("~/js/core/bootstrap-material-design.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/js/plugins/perfect-scrollbar.jquery.min.js")"></script>
    <!-- Chartist JS -->
    <script src="@Url.Content("~/js/plugins/chartist.min.js")"></script>
    <!--  Notifications Plugin    -->
    <script src="@Url.Content("~/js/plugins/bootstrap-notify.js")"></script>
    <!-- Control Center for Material Dashboard: parallax effects, scripts for the example pages etc -->
    <script src="@Url.Content("~/js/material-dashboard.min.js")" type="text/javascript"></script>


    <script src="@Url.Content("~/angularjs/angular.min.js")"></script>
    <script src="@Url.Content("~/scripts/Controllers/Layouts/Layout.js")"></script>
    <script src="@Url.Content("~/scripts/Services/User.Service.js")"></script>
    <script src="@Url.Content("~/scripts/Components/UserTable/UserTable.js")"></script>
    <script src="@Url.Content("~/scripts/Controllers/Franchise/Franchise.js")"></script>
    <script src="@Url.Content("~/scripts/Controllers/User/User.js")"></script>
    <script src="@Url.Content("~/scripts/Controllers/Dashboard/dashboard.js")"></script>
    <script src="@Url.Content("~/scripts/Controllers/Pins/pin.js")"></script>
    <script src="@Url.Content("~/scripts/Controllers/SingleLegIncome/SingleLegIncome.js")"></script>



    @RenderSection("Scripts", required: false)
</body>
</html>
